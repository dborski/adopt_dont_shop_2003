<h1>Shelters</h1>

<ul>
  <% @shelters.each do |shelter| %>
    <li>
      <%= shelter.name %> <%= link_to "Edit Shelter", "/shelters/#{shelter.id}/edit" %> 
      <%= button_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete %>
    </li>
  <% end %>
</ul>

<a href="/shelters/new">New Shelter</a>
